# SmartSuccess.AI GPU Backend - Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=SmartSuccess.AI GPU Backend
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production

# =============================================================================
# Server Settings
# =============================================================================
HOST=0.0.0.0
PORT=8000
WORKERS=4

# =============================================================================
# CORS Settings
# Add all domains that should be allowed to access this API
# =============================================================================
ALLOWED_ORIGINS=["https://smart-success-ai.vercel.app","https://matchwise-ai.vercel.app","http://localhost:3000"]

# =============================================================================
# Render Backend (for fallback and hybrid architecture)
# =============================================================================
RENDER_BACKEND_URL=https://smartsuccess-ai.onrender.com

# =============================================================================
# Optional API Keys (if using external LLM services)
# =============================================================================
OPENAI_API_KEY=
GROQ_API_KEY=
XAI_API_KEY=

# =============================================================================
# Redis (for caching - optional but recommended)
# =============================================================================
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# =============================================================================
# Cloud Storage (optional - for persistent user data)
# =============================================================================
S3_BUCKET=
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# =============================================================================
# Data Paths
# =============================================================================
DATA_DIR=./data
PRERAG_DIR=./data/pre_rag
USER_RAG_DIR=./data/user_rag
VOICE_PRESETS_DIR=./data/voice_presets
MODEL_CACHE_DIR=./models

# =============================================================================
# Model Settings
# =============================================================================
EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2
WHISPER_MODEL=large-v3
TTS_MODEL=tts_models/multilingual/multi-dataset/xtts_v2

# =============================================================================
# GPU Settings
# =============================================================================
GPU_DEVICE=cuda
GPU_MEMORY_FRACTION=0.9
MIXED_PRECISION=true

# =============================================================================
# GPU-specific Environment Variables
# =============================================================================
GPU_CUDA_VISIBLE_DEVICES=0
GPU_MAX_GPU_MEMORY=45GB
GPU_EMBEDDING_BATCH_SIZE=32
GPU_INFERENCE_BATCH_SIZE=4

# =============================================================================
# Performance Settings
# =============================================================================
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=60
BATCH_SIZE=8

# =============================================================================
# Interview Settings
# =============================================================================
MAX_QUESTIONS_PER_SESSION=20
QUESTION_TIMEOUT=300

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
